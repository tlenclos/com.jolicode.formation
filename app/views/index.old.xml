<Alloy>
	<NavigationWindow>
		<Window id="window" class="container">
			<ListView id="list">
				<Templates>
					<ItemTemplate name="templateArticlePublished">
						<View class="row">
							<Label bindId="title" class="title" />
							<Label bindId="content" class="content" />
						</View>
					</ItemTemplate>
					<ItemTemplate name="templateArticleUnpublished">
						<View class="row-unpublished">
							<Label bindId="title" class="title" />
							<Label bindId="content" class="content" />
						</View>
					</ItemTemplate>
				</Templates>

				<ListSection>
					<HeaderView>
						<View backgroundColor="#000" height="40">
							<Label color="#FFF">Articles</Label>
						</View>
					</HeaderView>
				</ListSection>
			</ListView>
		</Window>
	</NavigationWindow>
</Alloy>
